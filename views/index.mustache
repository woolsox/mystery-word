<!doctype html>
<html>
 <head>
  <meta charset="utf-8" />
  <title>Mystery Word Game</title>
  <link rel="stylesheet" type="text/css" href="css/style.css" />
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
 </head>
 <body>
   <h1>Mystery Word Game</h1>
   <div class="word">
    {{#wordToPlay}}
      <div class="hidden letters"><h2>{{.}}</h2></div>
    {{/wordToPlay}}
   </div>
   <form action="/" method="post">
      <input type="text" name="guess" placeholder="Guess a letter!" maxlength="1" required/>
      <button type="submit">Submit</button>
   </form>
   <p>
     Letters guessed: {{lettersGuessed}}
   </p>
   <h4>Guesses remaining: {{count}}</h4>
 </body>
</html>
